@model Sprint1Test.Models.Profile

@{
    ViewBag.Title = "ProfilePic";
}

<h2>Profile Pic</h2>

@*This is the profile pic edit page*@
@using (Html.BeginForm("ProfilePic", "Profile", null, FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.userName)
        @Html.HiddenFor(model => model.firstName)
        @Html.HiddenFor(model => model.lastName)
        @Html.HiddenFor(model => model.skillsOffered)
        @Html.HiddenFor(model => model.state)
        @Html.HiddenFor(model => model.email)
        @Html.HiddenFor(model => model.dateJoined)
        @Html.HiddenFor(model => model.city)
        @Html.HiddenFor(model => model.certs)
        @Html.HiddenFor(model => model.businessName)
        @Html.HiddenFor(model => model.UserID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="imagePath" type="file" name="file" style="width: 100%;" />
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update Pic" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Profile", "Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
