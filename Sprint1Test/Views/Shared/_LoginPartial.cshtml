@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></li>
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Details", "Profile", routeValues: null, htmlAttributes: new { title = "Profile" })
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>

        <li><a href="~/Profile/Details">Profile</a></li>
        
    </ul>
    }
}
else
{
            <li class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button" data-action="like" data-show-faces="true" data-share="true"></li>
            <li><a href="~/Account/Register">Register</a></li>
            <li><a href="~/Account/Login">Login</a>  </li>
}
