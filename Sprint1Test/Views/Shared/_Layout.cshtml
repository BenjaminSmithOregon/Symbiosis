            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

    <div class="wrapper col1">
        <div id="topbar">
            <p>Tel: 1 + (503) Sym-bios | Mail: SymbiosisInfo@symbiosis.com</p>
